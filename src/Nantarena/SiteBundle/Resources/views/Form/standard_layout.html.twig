{# Widgets #}
{% block button_widget %}
    {% spaceless %}
        {% if label is empty %}
            {% set label = name|humanize %}
        {% endif %}

        {% set attr = attr|merge({'class': (attr.class|default('') ~ ' btn')|trim}) %}

        <button type="{{ type|default('button') }}" {{ block('button_attributes') }}>{{ label|trans({}, translation_domain) }}</button>
    {% endspaceless %}
{% endblock button_widget %}

{% block choice_widget_expanded %}
    {% spaceless %}
        <div {{ block('widget_container_attributes') }}>
            {% for child in form %}
            <label class="checkbox">
                {{ form_widget(child) }}
                {{ child.vars.label }}
            </label>
            {% endfor %}
        </div>
    {% endspaceless %}
{% endblock choice_widget_expanded %}

{% block money_widget %}
    {% spaceless %}
        {% set attr = attr|merge({'class': (attr.class|default('') ~ ' input-mini')|trim}) %}
        <div class="input-append">
            {{ block('form_widget_simple') }}
            <span class="add-on">&euro;</span>
        </div>
    {% endspaceless %}
{% endblock money_widget %}

{% block datetime_widget %}
    {% spaceless %}
        {% if widget == 'single_text' %}
            <div class="input-append date datetimepicker">
                {{ block('form_widget_simple') }}
                <span class="add-on"><i class="icon-calendar"></i></span>
            </div>
        {% else %}
            <div {{ block('widget_container_attributes') }}>
                {{ form_errors(form.date) }}
                {{ form_errors(form.time) }}
                {{ form_widget(form.date) }}
                {{ form_widget(form.time) }}
            </div>
        {% endif %}
    {% endspaceless %}
{% endblock datetime_widget %}

{% block date_widget %}
    {% spaceless %}
        {% if widget == 'single_text' %}
            <div class="input-append date datepicker">
                {{ block('form_widget_simple') }}
                <span class="add-on"><i class="icon-calendar"></i></span>
            </div>
        {% else %}
            <div {{ block('widget_container_attributes') }}>
                {{ date_pattern|replace({
                '{{ year }}':  form_widget(form.year),
                '{{ month }}': form_widget(form.month),
                '{{ day }}':   form_widget(form.day),
                })|raw }}
            </div>
        {% endif %}
    {% endspaceless %}
{% endblock date_widget %}

{% block time_widget %}
    {% spaceless %}
        {% if widget == 'single_text' %}
            <div class="input-append date timepicker">
                {{ block('form_widget_simple') }}
                <span class="add-on"><i class="icon-calendar"></i></span>
            </div>
        {% else %}
            {% set vars = widget == 'text' ? { 'attr': { 'size': 1 }} : {} %}
            <div {{ block('widget_container_attributes') }}>
            {{ form_widget(form.hour, vars) }}{% if with_minutes %}:{{ form_widget(form.minute, vars) }}{% endif %}{% if with_seconds %}:{{ form_widget(form.second, vars) }}{% endif %}
        </div>
        {% endif %}
    {% endspaceless %}
{% endblock time_widget %}

{% block collection_widget %}
    {% spaceless %}
        {% if prototype is defined %}
            {% set prototype_html = '<tr>' %}
            {% for widget in prototype %}
                {% set prototype_html = prototype_html ~ '<td>' ~ form_widget(widget) ~ '</td>' %}
            {% endfor %}
            {% if form.vars.allow_delete %}
                {% set prototype_html = prototype_html ~ '<td><a href="#" class="collection_delete"><i class="icon-trash"></i></a></td>' %}
            {% endif %}
            {% set prototype_html = prototype_html ~ '</tr>' %}

            {% set attr = attr|merge({'data-prototype': prototype_html }) %}
            {% set attr = attr|merge({'data-count': form|length }) %}
            {% set attr = attr|merge({'class': (attr.class|default('') ~ ' collection_holder')|trim}) %}
        {% endif %}

        <div {{ block('widget_container_attributes') }}">
            <table class="table" >
                <tr>
                    {% for field in prototype %}
                        <th>
                            {% if labels[field.vars.name] is defined %}
                                {{ labels[field.vars.name] }}
                            {% endif %}
                        </th>
                    {% endfor %}
                    {% if form.vars.allow_delete %}
                        <th></th>
                    {% endif %}
                </tr>

                {% for field in form %}
                    <tr>
                        {% for widget in field %}
                        <td>
                            {{ form_widget(widget) }}
                            {{ form_errors(widget) }}
                        </td>
                        {% endfor %}

                        {% if form.vars.allow_delete %}
                            <td>
                                <a href="#" class="collection_delete"><i class="icon-trash"></i></a>
                            </td>
                        {% endif %}
                    </tr>
                {% endfor %}
                {% if form.vars.allow_add %}
                    <tr>
                        <td class="collection-add" colspan="{{ prototype|length + form.vars.allow_delete }}">
                            <a href="#" class="btn btn-small collection_add" >{{ add_text }}</a>
                        </td>
                    </tr>
                {% endif %}
            </table>
        </div>
    {% endspaceless %}
{% endblock collection_widget %}

{# Labels #}

{% block form_label %}
{% spaceless %}
    {% if label is not sameas(false) %}
        {% if not compound %}
            {% set label_attr = label_attr|merge({'for': id}) %}
        {% endif %}
        {% if required %}
            {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
        {% endif %}
        {% if label is empty %}
            {% set label = name|humanize %}
        {% endif %}

        {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' control-label')|trim}) %}

        <label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>{{ label|trans({}, translation_domain) }}</label>
    {% endif %}
{% endspaceless %}
{% endblock form_label %}

{% block button_label %}{% endblock %}

{# Rows #}

{% block form_row %}
{% spaceless %}
    <div class="control-group {% if errors|length > 0 %}error{% endif %}">
        {{ form_label(form) }}
        <div class="controls">
            {{ form_widget(form) }}
            {{ form_errors(form) }}
        </div>
    </div>
{% endspaceless %}
{% endblock form_row %}

{% block button_row %}
    {% spaceless %}
        <div class="text-center">
            {#<div class="controls">#}
                {{ form_widget(form) }}
            {#</div>#}
        </div>
    {% endspaceless %}
{% endblock button_row %}

{# Misc #}

{% block form_start %}
{% spaceless %}
    {% set method = method|upper %}
    {% if method in ["GET", "POST"] %}
        {% set form_method = method %}
    {% else %}
        {% set form_method = "POST" %}
    {% endif %}

    {% set attr = attr|merge({'class': (attr.class|default('') ~ ' form-horizontal')|trim}) %}

    <form method="{{ form_method|lower }}" action="{{ action }}"{% for attrname, attrvalue in attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}{% if multipart %} enctype="multipart/form-data"{% endif %}>
    {% if form_method != method %}
        <input type="hidden" name="_method" value="{{ method }}" />
    {% endif %}
{% endspaceless %}
{% endblock form_start %}

{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
        {% if form.children|length == 0 %}
            {% for error in errors %}
                <span class="help-inline">{{ error.message }}</span>
            {% endfor %}
        {% else %}
            {% for error in errors %}
                <div class="alert alert-error">{{ error.message }}</div>
            {% endfor %}
        {% endif %}
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}

