{% extends 'NantarenaSiteBundle::layout.html.twig' %}

{% block title %}{{ 'site.home.title'|trans }}{% endblock %}

{% block stylesheets %}
    {% stylesheets filter='cssrewrite' 'bundles/nantarenanews/css/*' %}
    <link href="{{ asset_url }}"  rel="stylesheet" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <div class="news">
        {% for news in latest %}
            {% embed 'NantarenaNewsBundle:News:_news.html.twig' with {'news': news} %}
            {% endembed %}
        {% else %}
            <br/>
            <div class="row-fluid">
                <p class="no-results alert alert-warning span6 offset3">
                    {{ 'home.news.no_results'|trans }}
                </p>
            </div>
        {% endfor %}

        <p class="text-center"><a href="{{ path('nantarena_news_index') }}" class="btn">{{ 'home.news.link'|trans }}</a></p>
    </div>
{% endblock %}
