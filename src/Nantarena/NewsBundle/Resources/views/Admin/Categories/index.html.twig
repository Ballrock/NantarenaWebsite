{% extends 'NantarenaAdminBundle::layout.html.twig' %}

{% block title 'news.admin.categories.index.title'|trans %}
{% block page_title 'news.admin.categories.index.title'|trans %}

{% block admin_content %}
    <div class="span6 offset3">
        <p class="text-center">
            <a href="{{ path('nantarena_news_admin_categories_create') }}" class="btn">{{ 'news.admin.categories.index.create'|trans }}</a>
        </p>
        <table class="table sortable" data-sort="1">
            <thead>
                <tr>
                    <th data-filter="ignore" class="tiny">#</th>
                    <th>{{ 'news.entity.name'|trans }}</th>
                    <th class="mini"></th>
                </tr>
            </thead>

            <tbody>
                {% for c in categories %}
                    <tr>
                        <td>{{ c.id }}</td>
                        <td>{{ c.name }}</td>
                        <td>
                            <a href="{{ category_edit_path(c) }}"><i class="icon-wrench"></i></a>
                            &nbsp;&nbsp;
                            <a href="{{ category_delete_path(c) }}"><i class="icon-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>

        </table>
    </div>
{% endblock %}
