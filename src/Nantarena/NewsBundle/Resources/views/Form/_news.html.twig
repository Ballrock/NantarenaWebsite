<fieldset>
    {% block form_news_fieldset %}
        <legend>{% block form_news_legend %}{% endblock %}</legend>

        {% block form_news_form %}
            {{ form_start(form, {'class': 'form-horizontal'}) }}
                {{ form_row(form.title) }}
                {{ form_row(form.category) }}
                {{ form_row(form.content) }}
                {{ form_row(form.state) }}
                {{ form_row(form.save) }}
            {{ form_end(form) }}
        {% endblock %}
    {% endblock %}
</fieldset>