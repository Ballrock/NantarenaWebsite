{% extends 'NantarenaNewsBundle::layout.html.twig' %}

{% block title 'news.index.title'|trans %}

{% block page_title 'news.index.title'|trans %}

{% block breadcrumb %}{% endblock %}

{% block news_content %}
    {{ render(controller('NantarenaNewsBundle:Category:categories')) }}

    {{ knp_pagination_render(pagination) }}

    <div class="news">
        {% for entity in pagination %}
            {% embed 'NantarenaNewsBundle:News:_news.html.twig' with {'news': entity} %}
            {% endembed %}
        {% else %}
            <br/>
            <div class="row-fluid">
                <p class="no-results alert alert-warning span6 offset3">
                    {{ 'news.index.no_results'|trans }}
                </p>
            </div>
        {% endfor %}
    </div>

    {{ knp_pagination_render(pagination) }}
{% endblock %}
