{% extends "NantarenaUserBundle::layout.html.twig" %}

{% block title 'user.registration.title'|trans %}
{% block page_title 'user.registration.page_title'|trans %}

{% block user_content %}
    {{ form_start(form, {
        'action': path('fos_user_registration_register'),
        'method': 'POST'
    }) }}
        {{ form_errors(form) }}

        {{ form_row(form.username, {'label': 'user.form.username'|trans}) }}
        {{ form_row(form.email, {'label': 'user.form.email'|trans}) }}
        {{ form_row(form.plainPassword.first, {'label': 'user.form.password'|trans}) }}
        {{ form_row(form.plainPassword.second, {'label': 'user.form.repeated'|trans}) }}
        {{ form_row(form.recaptcha, {'label': 'user.form.recaptcha'|trans}) }}

        <div class="control-group">
            <div class="controls">
                <input type="submit" class="btn" value="{{ 'user.registration.submit'|trans }}" />
            </div>
        </div>
    {{ form_end(form) }}
{% endblock user_content %}
