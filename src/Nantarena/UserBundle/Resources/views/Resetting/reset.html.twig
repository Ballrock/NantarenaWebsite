{% extends "NantarenaUserBundle::layout.html.twig" %}

{% block title 'user.resetting.title'|trans %}
{% block page_title 'user.resetting.page_title'|trans %}

{% block user_content %}
    <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="form-horizontal resetting">
        {{ form_widget(form) }}
        <div class="control-group">
            <div class="controls">
                <input type="submit" class="btn" value="{{ 'user.resetting.reset.submit'|trans }}" />
            </div>
        </div>
    </form>
{% endblock user_content %}
