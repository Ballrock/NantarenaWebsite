{% extends "NantarenaUserBundle::layout.html.twig" %}

{% block title 'user.profile.title'|trans %}
{% block page_title 'user.profile.page_title'|trans %}

{% block user_content %}
    {{ form_start(form, {
    'action': path('fos_user_profile_edit'),
    'method': 'POST',
    'attr': {'class': 'profile'}
    }) }}
        {{ form_errors(form) }}

        {{ form_row(form.username, {'label': 'user.form.username'|trans}) }}
        {{ form_row(form.email, {'label': 'user.form.email'|trans}) }}
        {{ form_row(form.current_password, {'label': 'user.form.current_password'|trans}) }}

        <div class="control-group">
            <div class="controls">
                <input type="submit" class="btn" value="{{ 'user.profile.submit'|trans }}" />
            </div>
        </div>
    {{ form_end(form) }}

    <p class="text-center">
        <a href="{{ path('fos_user_change_password') }}">{{ 'user.change_password.page_title'|trans }}</a>
    </p>

{% endblock user_content %}
