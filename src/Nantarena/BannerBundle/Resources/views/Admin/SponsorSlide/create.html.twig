{% extends 'NantarenaAdminBundle::layout.html.twig' %}

{% block title 'banner.admin.sponsorslide.create.title'|trans %}
{% block page_title 'banner.admin.sponsorslide.create.title'|trans %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets 'bundles/nantarenabanner/css/banneroverview.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block admin_content %}

<div class="container">
    <a href="{{ path('nantarena_banner_sponsorslide_index') }}">
        <button type="button" class="btn pull-right">
            {{'banner.admin.sponsorslide.index.return'|trans}}
        </button>
    </a>
</div>


{{ form(form) }}

{% include 'NantarenaBannerBundle:Admin:glance.html.twig' %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@NantarenaBannerBundle/Resources/public/js/glance.js' %}
