{% extends 'NantarenaAdminBundle::layout.html.twig' %}

{% block title 'payment.admin.payment.list.title'|trans %}
{% block page_title 'payment.admin.payment.list.title'|trans %}

{% block admin_content %}
	<div class="span10">
        <table class="table sortable filterable" data-sort="2" data-perpage="50">
            <thead>
            <tr>
                <th data-filter="ignore" class="tiny">#</th>
                <th>Acheteur</th>
                <th data-filter="date">Date</th>
                <th>Prix</th>
                <th>Nombre de transaction</th>
                <th class="mini"></th>
            </tr>
            </thead>

            <tbody>
            {% for payment in lpayment %}
                {% if payment.isrefund %}
                <tr class="error">
                {% else %}
                <tr>
                {% endif %}
                    <td>{{ payment.id }}</td>
                    <td>
                        {{ payment.user.username }}
                    </td>
                    <td>
                        {{ payment.date|date("d/m/Y H:i") }}
                    </td>
                    <td>
                        {{ payment.amount }}
                    </td>
                    <td>
                        {{ payment.transactions|length }}
                    </td>
                    <td>
						<a href="{{ path('nantarena_admin_payment_details', {'id': payment.id}) }}">
                            <i class="icon-eye-open"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>

            <tbody class="empty">
	            <tr>
	                <td colspan="10">
	                    <p class="text-center">Pas de transaction en cours</p>
	                </td>
	            </tr>
	        </tbody>
        </table>

        <div class="pagination pagination-centered"><ul></ul></div>
    </div>
{% endblock %}
