<div class="span6 offset3">
    {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_row(form.event, {'label': 'event.profile.index.event'|trans|colon}) }}

        {{ form_row(form.user, {
            'label': 'user.form.username'|trans|colon,
            'invalid_message': 'event.user.invalid'|trans({}, 'validators')
        }) }}

        {{ form_row(form.entryType, {'label': 'event.form.entrytype.name'|trans|colon}) }}

        {% for team in teams %}
            {% if loop.first %}
                <div class="control-group">
                    <label class="control-label">{{ 'event.profile.index.team'|trans|colon }}</label>
                    <div class="controls">
                        <ul class="unstyled">
            {% endif %}
                            <li>
                                <a href="#">
                                    {{ team.name }}
                                </a>
                                &nbsp;&nbsp;
                                <a href="{{ path('nantarena_event_admin_teams_edit', {'id': team.id}) }}">
                                    <i class="icon-wrench"></i>
                                </a>
                            </li>
            {% if loop.last %}
                        </ul>
                    </div>
                </div>
            {% endif %}
        {% endfor %}

        {{ form_row(form.submit, {'label': submit}) }}
    {{ form_end(form) }}

    <p class="text-center">
        <a href="{{ path('nantarena_event_admin_entries', {
            'slug': event.slug
        }) }}">
            {{ 'event.admin.entries.back'|trans }}
        </a>
    </p>
</div>
