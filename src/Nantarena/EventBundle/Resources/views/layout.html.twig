{% extends 'NantarenaSiteBundle::layout.html.twig' %}

{% if form is defined %}
    {% form_theme form with 'NantarenaSiteBundle:Form:standard_layout.html.twig' %}
{% endif %}

{% block stylesheets %}
    {% stylesheets filter='cssrewrite' 'bundles/nantarenaevent/css/*' %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    {% include 'NantarenaSiteBundle::_flashbag.html.twig' %}

    <div class="row-fluid event">
        {% block event_content %}
        {% endblock event_content %}
    </div>
{% endblock %}

{% block javascripts %}
    {% javascripts '@NantarenaEventBundle/Resources/public/js/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
